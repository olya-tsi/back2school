{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Create bin folder",
            "command": "if(!(Test-Path bin)) {mkdir bin}"
        },
        {
            "type": "shell",
            "label": "Week 1 assignment build",
            "command": "g++",
            "args": [
                "-g",
                "Coursera-C++\\Course1\\ww1\\week1.cpp",
                "-o",
                "bin\\week1.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Create bin folder"
        }
    ]
}